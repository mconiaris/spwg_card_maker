						<%= form.text_field :s2, class: "r2 specialty-value" %>
						
						<%= form.label 3, class: "r3 specialty-number" %><br>
						<%= form.text_field :s3, class: "r3 specialty-value" %>
						
						<%= form.label 4, class: "r4 specialty-number" %><br>
						<%= form.text_field :s4, class: "r4 specialty-value" %>
						
						<%= form.label 5, class: "r5 specialty-number" %><br>
