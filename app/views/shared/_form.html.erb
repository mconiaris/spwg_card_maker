<!-- TODO: Check to see if there is a way to get errors to work with Turbo on. -->
<div class="wrestler-display-container">
	<%= form_with model: wrestler, class: "wrestler-form",local: true, data: { turbo: false } do |form| %>

		<div class="wrestler-form-container">
			<!-- Left Side of Card -->
			<%= form.text_field :name, class: "wrestler-name grid-line-bold", placeholder: "Name" %>

			<div class="wrestler-gc-header grid-line-bold-left grid-line-bold-bottom">GENERAL CARD</div>

			<!-- Left Side of GC -->
			<div class="gc2 grid-line-bold-left grid-line-bottom">
				<%= form.label 2 %>
				<%= form.text_field :gc02 %>
			</div>
			<div class="gc3 grid-line-bold-left grid-line-bottom">
				<%= form.label 3 %>
				<%= form.text_field :gc03 %>
			</div>
			<div class="gc4 grid-line-bold-left grid-line-bottom">
				<%= form.label 4 %>
				<%= form.text_field :gc04 %>
			</div>
			<div class="gc5 grid-line-bold-left grid-line-bottom">
				<%= form.label 5 %>
				<%= form.text_field :gc05 %>
			</div>
			<div class="gc6 grid-line-bold-left grid-line-bottom">
				<%= form.label 6 %>
				<%= form.text_field :gc06 %>
			</div>

			<!-- Right Side of GC -->
			<div class="gc7 grid-line-bold-right grid-line-bottom">
				<%= form.label 7 %>
				<%= form.text_field :gc07 %>
			</div>
			<div class="gc8 grid-line-bold-right grid-line-bottom">
				<%= form.label 8 %>
				<%= form.text_field :gc08 %>
			</div>
			<div class="gc9 grid-line-bold-right grid-line-bottom">
				<%= form.label 9 %>
				<%= form.text_field :gc09 %>
			</div>
			<div class="gc10 grid-line-bold-right grid-line-bottom">
				<%= form.label 10 %>
				<%= form.text_field :gc10 %>
			</div>
			<div class="gc11 grid-line-bold-right grid-line-bottom">
				<%= form.label 11 %>
				<%= form.text_field :gc11 %>
			</div>

			<!-- Center of General Card -->
			<div class="gc12 grid-line-bold-left grid-line-bold-bottom">
				<%= form.label 12 %>
				<%= form.text_field :gc12 %>
			</div>


			<!-- Defensive Card -->
			<div class="wrestler-dc-header grid-line-bold-left grid-line-bold-bottom">DEFENSIVE CARD</div>

		  <!-- Left of Defensive Card -->
		  <div class="dc2 grid-line-bold-left grid-line-bottom">
				<%= form.label 2 %>
				<%= form.text_field :dc02 %>
		  </div>
		  <div class="dc3 grid-line-bold-left grid-line-bottom">
				<%= form.label 3 %>
				<%= form.text_field :dc03 %>
		  </div>
		  <div class="dc4 grid-line-bold-left grid-line-bottom">
				<%= form.label 4 %>
				<%= form.text_field :dc04 %>
		  </div>
			<div class="dc5 grid-line-bold-left grid-line-bottom">
				<%= form.label 5%>
				<%= form.text_field :dc05 %>
			</div>
			<div class="dc6 grid-line-bold-left grid-line-bottom">
				<%= form.label 6 %>
				<%= form.text_field :dc06 %>
			</div>

			<!-- Right of Defensive Card -->
			<div class="dc7 grid-line-bold-right grid-line-bottom">
				<%= form.label 7 %>
				<%= form.text_field :dc07 %>
			</div>
			<div class="dc8 grid-line-bold-right grid-line-bottom">
				<%= form.label 8 %>
				<%= form.text_field :dc08 %>
			</div>
			<div class="dc9 grid-line-bold-right grid-line-bottom">
				<%= form.label 9 %>
				<%= form.text_field :dc09 %>
			</div>
			<div class="dc10 grid-line-bold-right grid-line-bottom">
				<%= form.label 10 %>
				<%= form.text_field :dc10 %>
			</div>
			<div class="dc11 grid-line-bold-right grid-line-bottom">
				<%= form.label 11 %>
				<%= form.text_field :dc11 %>
			</div>

			<!-- Center of Defensive Card -->
			<div class="dc12 grid-line-bold-left grid-line-bold-bottom">
				<%= form.label 12 %>
				<%= form.text_field :dc12 %>
			</div>


			<!-- Specialty Card -->
			<div class="wrestler-specialty-header grid-line-bold-left grid-line-bold-bottom">SPECIALTY:</div>
			<%= form.text_field :specialty, class: "wrestler-specialty-move grid-line-bold-left grid-line-bottom" %>

			<div class="s1 grid-line-bold-left grid-line-bottom">
				<%= form.label 1 %>
				<%= form.text_field :s1 %>
			</div>	
			<div class="s2 grid-line-bold-left grid-line-bottom">
				<%= form.label 2 %>
				<%= form.text_field :s2 %>
			</div>
			<div class="s3 grid-line-bold-left grid-line-bottom">
				<%= form.label 3 %>
				<%= form.text_field :s3 %>
			</div>
			<div class="s4 grid-line-bold-left grid-line-bottom">
				<%= form.label 4 %>
				<%= form.text_field :s4 %>
			</div>
			<div class="s5 grid-line-bold-left grid-line-bottom">
				<%= form.label 5 %>
				<%= form.text_field :s5 %>
			</div>
			<div class="s6 grid-line-bold-left grid-line-bold-bottom">
				<%= form.label 6 %>
				<%= form.text_field :s6 %>
			</div>

			<!-- Sub, Tag & Priority -->
			<div class="sub grid-line-bold-left grid-line-bottom">
		  	<div>SUB:</div>
				<%= form.text_field :subx %>
		    <div>-</div>
				<%= form.text_field :suby %>
			</div>

			<div class="tag grid-line-bold-left grid-line-bottom">
		    <div>TAG TEAM:</div>
				<%= form.text_field :tagx %>
		    <div>-</div>
				<%= form.text_field :tagy %>
			</div>

			<div class="priority grid-line-bold-left grid-line-bold-bottom">
				<!-- TODO: Automate Pri-T value based on TT% -->
		    <div>PRIORITY:</div>
				<%= form.text_field :prioritys %>
		  	<div>/</div>
				<%= form.text_field :priorityt %>
			</div>


			<!-- Submit and Cancel buttons -->
			<div class="wrestler-submit-cancel">
				<div>
					<%= form.submit %>
				</div>

				<div>
					<%= link_to 'Cancel', :back %>
				</div>
			</div>


			<!-- Right Side of Card -->
	  	<div class="wrestler-oc-header grid-line-bold-top grid-line-bold-bottom grid-line-bold-right">OFFENSIVE CARD</div>

	  	<div class="oc2 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 2 %>
				<%= form.text_field :oc02 %>
			</div>
			<div class="oc3 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 3 %>
				<%= form.text_field :oc03 %>
			</div>
			<div class="oc4 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 4 %>
				<%= form.text_field :oc04 %>
			</div>
			<div class="oc5 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 5 %>
				<%= form.text_field :oc05 %>
			</div>
			<div class="oc6 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 6 %>
				<%= form.text_field :oc06 %>
			</div>
			<div class="oc7 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 7 %>
				<%= form.text_field :oc07 %>
			</div>
			<div class="oc8 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 8 %>
				<%= form.text_field :oc08 %>
			</div>
			<div class="oc9 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 9 %>
				<%= form.text_field :oc09 %>
			</div>
			<div class="oc10 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 10 %>
				<%= form.text_field :oc10 %>
			</div>
			<div class="oc11 grid-line-bold-left  grid-line-bold-right  grid-line-bottom">
				<%= form.label 11 %>
				<%= form.text_field :oc11 %>
			</div>
			<div class="oc12 grid-line-bold-left  grid-line-bold-right">
				<%= form.label 12 %>
				<%= form.text_field :oc12 %>
			</div>


			<!-- Ropes Card -->
			<div class="wrestler-ropes-header grid-line-bold">=ROPES=</div>

			<div class="rc2 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 2 %>
				<%= form.text_field :ro02 %>
		  </div>
		  <div class="rc3 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 3 %>
				<%= form.text_field :ro03 %>
		  </div>
			<div class="rc4 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 4 %>
				<%= form.text_field :ro04 %>
			</div>
			<div class="rc5 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 5 %>
				<%= form.text_field :ro05 %>
			</div>
			<div class="rc6 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 6 %>
				<%= form.text_field :ro06 %>
			</div>
			<div class="rc7 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 7 %>
				<%= form.text_field :ro07 %>
			</div>
			<div class="rc8 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 8 %>
				<%= form.text_field :ro08 %>
			</div>
			<div class="rc9 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 9 %>
				<%= form.text_field :ro09 %>
			</div>
			<div class="rc10 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 10 %>
				<%= form.text_field :ro10 %>
			</div>
			<div class="rc11 grid-line-bold-left grid-line-bold-right grid-line-bottom">
				<%= form.label 11 %>
				<%= form.text_field :ro11 %>
			</div>
			<div class="rc12 grid-line-bold-left grid-line-bold-right grid-line-bold-bottom">
				<%= form.label 12 %>
				<%= form.text_field :ro12 %>
			</div>


			<!-- Set, Division & Promotion -->
			<%= form.text_field :set, class: "wrestler-set grid-line-bold-left grid-line-bold-right grid-line-bottom", placeholder: "Set" %>

			<% if @wrestler.template == true %>
				<!-- TODO: After creating Admins, add if statment for admin insert form here. -->
				<!-- TODO: Remove this from the current site. -->

				<%= form.collection_select :division_id, Division.order(:name), :id, :name, class: "wrestler-division grid-line-bold-left grid-line-bold-right grid-line-bottom", :prompt => "Division" %>

				<%= form.collection_select :promotion_id, Promotion.order(:name), :id, :name, class: "wrestler-promotion grid-line-bold-left grid-line-bold-right grid-line-bottom", :prompt => "Promotion" %>
			<% end %>

			<div class="notes">
				<p>Note: original came cards had exactly five "A" rolls.</p>
				<p>For Ropes moves with no points, please type "N/A"</p>
			</div>





		</div> <!-- End of wrestler-form-container -->


	<% end %> <!-- End of wrestler-form -->

	<!-- Third Column -->
	<!-- TODO: DRY stats presentation with show view. -->
	<div class="wrestler-stats">
		<div>WRESTLER STATS</div>
		<% if wrestler.errors.any? %>
	  	<%= render 'shared/form_errors', wrestler: wrestler %>
	  <% else %>
	  	<%= render 'shared/form_stats', wrestler: wrestler %>
	  <% end %> <!-- form-with -->

	</div> <!-- End of wrestler-stats -->

</div> <!-- End of wrestler-display-container -->
