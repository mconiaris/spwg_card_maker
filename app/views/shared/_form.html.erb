						<%= form.text_field :oc07, class: "r7" %>
					</div>
					<div class="r8 oc-ropes grid-line">
						<%= form.label 8, class: "r8" %>
						<%= form.text_field :oc08, class: "r8" %>
					</div>
					<div class="r9 oc-ropes grid-line">
						<%= form.label 9, class: "r9" %>
						<%= form.text_field :oc09, class: "r9" %>
					</div>
					<div class="r10 oc-ropes grid-line">
						<%= form.label 10, class: "r10" %>
						<%= form.text_field :oc10, class: "r10" %>
					</div>
					<div class="r11 oc-ropes grid-line">
						<%= form.label 11, class: "r11" %>
						<%= form.text_field :oc11, class: "r11" %>
					</div>
					<div class="r12 oc-ropes grid-line">
						<%= form.label 12, class: "r11" %>
						<%= form.text_field :oc12, class: "r11" %>
					</div>
					
			    <div class="r13 oc-ropes title grid-line-bold">=ROPES=</div>

			    <div class="r14 oc-ropes grid-line">
						<%= form.label 2, class: "r14" %>
						<%= form.text_field :ro02, class: "r14" %>
			    </div>
			    <div class="r15 oc-ropes grid-line">
						<%= form.label 3, class: "r15" %>
						<%= form.text_field :ro03, class: "r15" %>
			    </div>
					<div class="r16 oc-ropes grid-line">
						<%= form.label 4, class: "r16" %>
						<%= form.text_field :ro04, class: "r16" %>
					</div>
					<div class="r17 oc-ropes grid-line">
						<%= form.label 5, class: "r17" %>
						<%= form.text_field :ro05, class: "r17" %>
					</div>
