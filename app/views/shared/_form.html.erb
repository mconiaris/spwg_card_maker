			<%= form.text_field :dc11, class: "gc-dc-input" %>
		</div>

		<!-- Center of Defensive Card -->
		<div class="dc12 grid-line-bold-left grid-line-bold-right grid-line-bold-bottom">
			<%= form.label 12, class: "roll-number" %>
			<%= form.text_field :dc12, class: "gc-dc-input" %>
		</div>


		<!-- Specialty Card -->
		<div class="wrestler-specialty-header grid-line-bold-left grid-line-bold-right grid-line-bold-bottom">SPECIALTY:</div>
		<%= form.text_field :specialty, class: "wrestler-specialty-move grid-line-bold-left grid-line-bottom" %>

		<div class="s1 grid-line-bold-left grid-line-bold-right grid-line-bottom">
			<%= form.label 1, class: "roll-number" %>
			<%= form.text_field :s1, class: "move-input" %>
		</div>	
		<div class="s2 grid-line-bold-left grid-line-bold-right grid-line-bottom">
			<%= form.label 2, class: "roll-number" %>
