					</div>
					<div class="r19 oc-ropes grid-line">
						<%= form.label 7, class: "r19" %>
						<%= form.text_field :ro07, class: "r19" %>
					</div>
					<div class="r20 oc-ropes grid-line">
						<%= form.label 8, class: "r20" %>
						<%= form.text_field :ro08, class: "r20" %>
					</div>
					<div class="r21 oc-ropes grid-line">
						<%= form.label 9, class: "r21" %>
						<%= form.text_field :ro09, class: "r21" %>
					</div>
					<div class="r22 oc-ropes grid-line">
						<%= form.label 10, class: "r22" %>
						<%= form.text_field :ro10, class: "r22" %>
					</div>
					<div class="r23 oc-ropes grid-line">
						<%= form.label 11, class: "r23" %>
						<%= form.text_field :ro11, class: "r23" %>
					</div>
					<div class="r24 oc-ropes grid-line">
						<%= form.label 12, class: "r24" %>
						<%= form.text_field :ro12, class: "r24" %>
					</div>
					
					<%= form.text_field :set, placeholder: "Set", class: "r25 oc-ropes title grid-line" %>
					
					<% if @wrestler.template == true %>
						<!-- TODO: After creating Admins, add if statment for admin insert form here. -->
						<!-- TODO: Remove this from the current site. -->
						<div class="grid-line">
							<%= form.collection_select :division_id, Division.order(:name), :id, :name, :prompt => "Division", class: "r26 oc-ropes grid-line" %>
						</div>

						<div class="grid-line">
							<%= form.collection_select :promotion_id, Promotion.order(:name), :id, :name, :prompt => "Promotion", class: "r27 oc-ropes grid-line" %>
						</div>
				<% end %>
				</div>

				<div class="r27 submit-cancel-container">
					<div id="submit_button">
						<%= form.submit %>
					</div>

					<div id="cancel-button" >
						<%= link_to 'Cancel', :back %>
					</div>
				</div>
			
		<% end %>
	</div> <!-- wrestler-wrapper -->

  <p>Note: original came cards had exactly five "A" rolls.</p>
  <p>For Ropes moves with no points, please type "N/A"</p>



  <!-- Third Column -->
  <!-- TODO: DRY stats presentation with show view. -->
  <div class="wrestler-stats c2">
  	<% if wrestler.errors.any? %>
    	<%= render 'shared/form_errors', wrestler: wrestler %>
    <% else %>
    	<%= render 'shared/form_stats', wrestler: wrestler %>
    <% end %> <!-- form-with -->
	</div> <!-- wrestler-stats -->

</div> <!-- wrestler-container -->