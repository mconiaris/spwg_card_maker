						<%= form.label 2, class: "r10 gcdc-left-number" %>
						<%= form.text_field :dc02, class: "r10 gcdc-left-value" %>
			    </div>
			    <div class="r11 quarter-line-left">
						<%= form.label 3, class: "r11 gcdc-left-number" %>
