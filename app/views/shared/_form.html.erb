			<%= form.label 11, class: "roll-number" %>
			<%= form.text_field :oc11, class: "move-input" %>
		</div>
		<div class="oc12 grid-line-bold-right">
			<%= form.label 12, class: "roll-number" %>
			<%= form.text_field :oc12, class: "move-input" %>
		</div>


		<!-- Ropes Card -->
		<div class="wrestler-ropes-header grid-line-bold-right grid-line-bold-top grid-line-bold-bottom">=ROPES=</div>

		<div class="rc2 grid-line-bold-right grid-line-bottom">
			<%= form.label 2, class: "roll-number" %>
			<%= form.text_field :ro02, class: "move-input" %>
	  </div>
	  <div class="rc3 grid-line-bold-right grid-line-bottom">
			<%= form.label 3, class: "roll-number" %>
			<%= form.text_field :ro03, class: "move-input" %>
	  </div>
		<div class="rc4 grid-line-bold-right grid-line-bottom">
			<%= form.label 4, class: "roll-number" %>
			<%= form.text_field :ro04, class: "move-input" %>
		</div>
		<div class="rc5 grid-line-bold-right grid-line-bottom">
			<%= form.label 5, class: "roll-number" %>
			<%= form.text_field :ro05, class: "move-input" %>
		</div>
		<div class="rc6 grid-line-bold-right grid-line-bottom">
			<%= form.label 6, class: "roll-number" %>
			<%= form.text_field :ro06, class: "move-input" %>
		</div>
		<div class="rc7 grid-line-bold-right grid-line-bottom">
			<%= form.label 7, class: "roll-number" %>
			<%= form.text_field :ro07, class: "move-input" %>
		</div>
		<div class="rc8 grid-line-bold-right grid-line-bottom">
			<%= form.label 8, class: "roll-number" %>
			<%= form.text_field :ro08, class: "move-input" %>
		</div>
		<div class="rc9 grid-line-bold-right grid-line-bottom">
			<%= form.label 9, class: "roll-number" %>
			<%= form.text_field :ro09, class: "move-input" %>
		</div>
		<div class="rc10 grid-line-bold-right grid-line-bottom">
			<%= form.label 10, class: "roll-number" %>
			<%= form.text_field :ro10, class: "move-input" %>
		</div>
		<div class="rc11 grid-line-bold-right grid-line-bottom">
			<%= form.label 11, class: "roll-number" %>
			<%= form.text_field :ro11, class: "move-input" %>
		</div>
		<div class="rc12 grid-line-bold-right grid-line-bold-bottom">
			<%= form.label 12, class: "roll-number" %>
			<%= form.text_field :ro12, class: "move-input" %>
		</div>


		<!-- Set, Division & Promotion -->
		<%= form.text_field :set, class: "wrestler-set grid-line-bold-left grid-line-bold-right grid-line-bold-bottom", placeholder: "Set" %>

