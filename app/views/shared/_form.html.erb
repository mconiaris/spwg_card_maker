						<%= form.label 12 %>
						<%= form.text_field :dc12 %>
					</div>
					
			    <div class="half-line r16 title grid-line-bold">SPECIALTY:</div>
					<%= form.text_field :specialty, class: "half-line r17 title grid-line" %>

					<div class="specialty-wrapper half-line">
						<%= form.label 1, class: "specialty-number r1" %>
						<%= form.text_field :s1, class: "specialty-value r1" %>
					
