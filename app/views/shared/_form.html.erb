					<div class="r4 oc-ropes grid-line">
						<%= form.label 4, class: "r4" %>
						<%= form.text_field :oc04, class: "r4" %>
					</div>
					<div class="r5 oc-ropes grid-line">
						<%= form.label 5, class: "r5" %>
						<%= form.text_field :oc05, class: "r5" %>
					</div>
					<div class="r6 oc-ropes grid-line">
