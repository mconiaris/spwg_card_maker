<div class="wrestler-list">
  <table id="wrestlers">
    <tr>
      <th><%= link_to "Wrestler", :sort => "name" %></th>
      <th><%= link_to "Set", :sort => "set" %></th>
      <th><%= link_to "Set", :sort => "set" %><%= link_to "PRI (S)", :sort => "prioritys" %></th>
      <th><%= link_to "PRI (TT)", :sort => "priorityt" %></th>
      <th><%= link_to "Tag %", :sort => "tt" %></th>
      <th><%= link_to "Card Rating", :sort => "card_rating" %></th>
      <th><%= link_to "OC Prob", :sort => "oc_prob" %></th>
      <th><%= link_to "Points Per Round", :sort => "total_points" %></th>
      <th><%= link_to "DQ Prob", :sort => "dq_prob" %></th>
      <th><%= link_to "P/A Prob", :sort => "pa_prob" %></th>
      <th><%= link_to "Sub Prob", :sort => "sub_prob" %></th>
      <th><%= link_to "XX Prob", :sort => "xx_prob" %></th>
      <th><%= link_to "Sub Loss Prob", :sort => "submission" %></th>
      <th><%= link_to "Tag Save Prob", :sort => "tag_team_save" %></th>
    </tr>
    <% @wrestlers.each do |wrestler| %>
      <tr>
          <td><%= link_to wrestler.name, wrestler %></td>
          <td><%= wrestler.set %></td>
          <td><%= wrestler.prioritys %></td>
          <td><%= wrestler.priorityt %></td>
          <td class="value"><%= "%.0f" % wrestler.tt %>%</td>
          <td class="value"><%= "%.1f" % wrestler.card_rating %></td>
          <td class="value"><%= "%.0f" % wrestler.oc_prob %>%</td>
          <td class="value"><%= "%.3f" % wrestler.total_points %></td>
          <td class="value"><%= "%.0f" % wrestler.dq_prob %>%</td>
          <td class="value"><%= "%.0f" % wrestler.pa_prob %>%</td>
          <td class="value"><%= "%.0f" % wrestler.sub_prob %>%</td>
          <td class="value"><%= "%.0f" % wrestler.xx_prob %>%</td>
          <td class="value"><%= "%.0f" % wrestler.submission %>%</td>
          <td class="value"><%= "%.0f" % wrestler.tag_team_save %>%</td>
      </tr>
    <% end %>
  </table>
</div>